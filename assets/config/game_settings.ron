(
    physics: (
        gravity: -980.0,
        terminal_velocity: -500.0,
    ),
    window: (
        width: 1280,
        height: 720,
        title: "Tropical Fox",
        resizable: true,
    ),
    display: (
        // Camera zoom (smaller = more zoomed in)
        camera_scale: 0.15,
        // Player sprite display size in pixels
        player_sprite_size: 12.0,
    ),
    stage: (
        // Stage position offset
        position_x: 0.0,
        position_y: 0.0,
        // Stage scale (1.0 = original LDtk size)
        scale: 1.0,
        // Player spawn position
        player_start_x: 0.0,
        player_start_y: 200.0,
    ),
    player: (
        // Movement
        move_speed: 100.0,
        acceleration: 5.0,
        deceleration: 7.5,
        air_deceleration: 10.0,   // Air friction - stronger than ground for better landing precision

        // Jump
        jump_force: 200.0,
        jump_cut_multiplier: 0.4,

        // Advanced jump mechanics (Celeste-inspired)
        coyote_time: 0.15,        // Time after leaving ground where jump is still allowed
        jump_buffer_time: 0.15,   // Time before landing where jump input is remembered

        // Dash (Celeste-inspired)
        dash_speed: 500.0,        // Speed during dash
        dash_duration: 0.15,      // How long the dash lasts
        max_air_dashes: 1,        // Number of air dashes before needing to touch ground

        // Wall mechanics (Celeste-inspired)
        wall_jump_force_x: 300.0, // Horizontal push away from wall
        wall_jump_force_y: 400.0, // Vertical jump force
        wall_slide_speed: -100.0, // Slow slide down wall
    ),
)
